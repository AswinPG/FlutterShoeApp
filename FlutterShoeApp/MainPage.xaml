                VerticalOptions="Center" />
            <ff:CachedImage
                Grid.Column="2"
                HeightRequest="20"
                HorizontalOptions="Center"
                Source="Cart.png"
                VerticalOptions="Center"
                WidthRequest="20" />
        </Grid>

    </NavigationPage.TitleView>

    <StackLayout>
        <ScrollView HorizontalScrollBarVisibility="Never" Orientation="Horizontal">

            <StackLayout
                x:Name="MainStack"
                Padding="20,10,20,10"
                Orientation="Horizontal"
                Spacing="40"
                VerticalOptions="Center">
                <StackLayout.Behaviors>
                    <xamanimation:EntranceTransition Duration="1000" />
                </StackLayout.Behaviors>
                <Grid>

                    <BoxView
                        BackgroundColor="#bbbbbb"
                        CornerRadius="20"
                        Opacity=".4"
                        WidthRequest="60" />
                    <Label
                        FontSize="17"
                        HorizontalOptions="Center"
                        Text="All"
                        TextColor="Black"
                        VerticalOptions="Center" />
                </Grid>
                <Label
                    FontSize="16"
                    HorizontalOptions="Center"
                    Text="Sneakers"
                    TextColor="Black"
                    VerticalOptions="Center" />
                <Label
                    FontSize="16"
                    HorizontalOptions="Center"
                    Text="Football"
                    TextColor="Black"
                    VerticalOptions="Center" />
                <Label
                    FontSize="16"
                    HorizontalOptions="Center"
                    Text="Soccer"
                    TextColor="Black"
                    VerticalOptions="Center" />
                <Label
                    FontSize="16"
                    HorizontalOptions="Center"
                    Text="Casual"
                    TextColor="Black"
                    VerticalOptions="Center" />
                <Label
                    FontSize="16"
                    HorizontalOptions="Center"
                    Text="Golf"
                    TextColor="Black"
                    VerticalOptions="Center" />

            </StackLayout>
        </ScrollView>
        <CollectionView
            x:Name="MainCollectionView"
            SelectionChanged="MainCollectionView_SelectionChanged"
            SelectionMode="Single">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.Behaviors>
                            <xamanimation:EntranceTransition Duration="1000" />
                        </Grid.Behaviors>
                        <sh:Shadows
                            Margin="15,5,15,18"
                            HorizontalOptions="FillAndExpand"
                            Shades="{sh:SingleShade Color=Black,
                                                    Opacity=.35,
                                                    BlurRadius=20,
                                                    Offset='5,5'}"
                            VerticalOptions="Start">

                            <Frame
                                Padding="0"
                                CornerRadius="20"
                                HasShadow="False">
                                <Grid>

                                    <ff:CachedImage
                                        sharedTransitions:Transition.Group="{Binding ImageUrl}"
                                        sharedTransitions:Transition.Name="DogImage"
                                        Aspect="AspectFill"
                                        DownsampleToViewSize="True"
                                        HeightRequest="250"
                                        HorizontalOptions="FillAndExpand"
                                        Source="{Binding ImageUrl}"
                                        VerticalOptions="FillAndExpand" />
                                    <Label
                                        Padding="30"
                                        FontAttributes="Bold"
                                        FontSize="30"
                                        Text="{Binding Name}"
                                        TextColor="White"
                                        VerticalOptions="Start" />
                                    <Label
                                        Padding="30,70,30,30"
                                        FontSize="20"
                                        Text="{Binding Company}"
                                        TextColor="White"
                                        VerticalOptions="Start" />
                                    <Label
                                        Padding="30"
                                        FontAttributes="Bold"
                                        FontSize="30"
                                        Text="{Binding Price}"
                                        TextColor="White"
                                        VerticalOptions="End" />
                                    <BoxView
                                        Margin="30"
                                        BackgroundColor="White"
                                        CornerRadius="40"
                                        HeightRequest="35"
                                        HorizontalOptions="End"
                                        VerticalOptions="StartAndExpand"
                                        WidthRequest="35" />
                                    <ff:CachedImage
                                        Margin="38"
                                        HeightRequest="20"
                                        HorizontalOptions="End"
                                        Source="Cart.png"
                                        VerticalOptions="Start"
                                        WidthRequest="20" />
                                </Grid>

                            </Frame>



                        </sh:Shadows>

                    </Grid>

                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <!--<ff:CachedImage
            Aspect="AspectFit"
            DownsampleToViewSize="True"
            Source="a.jpg" />
        <Label Text="jn" />-->
    </StackLayout>

</ContentPage>
